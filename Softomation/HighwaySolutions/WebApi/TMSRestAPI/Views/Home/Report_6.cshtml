                    <td style="width:10%">Generated By</td>
                    <td style="width:40%">: @ViewBag.GenratedBy</td>
                </tr>
            </tbody>
        </table>
        <div style="border:1px solid"></div>
        <div class="blankSpace"></div>
        <table class="tableizer-table" style="width:100%">
            <thead>
                <tr class="tableizer-firstrow">
                    <th>Class Name</th>
                    <th>Total Count</th>
                    <th>Total Unmatched Count</th>
                    <th>Accuracy %</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Rows.Count > 0)
                {
                    foreach (DataRow row in Model.Rows)
                    {
                        totalCount = totalCount + Convert.ToDecimal(row["TotalCount"]);
                        totalUmmatchedCount = totalUmmatchedCount + Convert.ToDecimal(row["TotalUnmatchedCount"]);
                        totalpercent = totalpercent + Convert.ToDecimal(row["AccuracyPercent"]);
                        <tr>
                            <td>@row["ClassName"]</td>
                            <td>@row["TotalCount"]</td>
                            <td>@row["TotalUnmatchedCount"]</td>
                            <td>@row["AccuracyPercent"]</td>
                        </tr>
                    }
            <tr>
                <td>Total</td>
                <td>@totalCount</td>
                <td>@totalUmmatchedCount</td>
                <td style="text-align:right">@totalpercent</td>
            </tr>

@using System.Data
@model DataSet
@{
    Layout = null;
    int index = 0;
    string LeftMargin = "2%";
    Int64 LastLeftMargin = 0;

    string CatName = "";
    Int64 CatCount = 0;
    string CatPercentage = "0%";
    string CatColor = "";
    HighwaySoluations.Softomation.ATMSSystemLibrary.IL.DataFilterIL FilterData = ViewBag.Filter;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>VIDS-Summery Report</title>
    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" media='screen,print' />
    <script src="~/Content/bootstrap/js/jquery-3.3.1.js"></script>
    <script src="~/Content/bootstrap/js/bootstrap.js"></script>
    <style type="text/css">
        tr {
            page-break-inside: avoid;
        }

        .report-header {
            background-color: #011b40;
            color: #fff;
            width: 100%;
            text-align: center;
        }

        .image-header {
            height: 70px;
            width: 100%;
            margin-top: 5px;
            margin-bottom: 5px;
        }

        .data-fliter {
            width: 100%;
            border: none !important;
        }

            .data-fliter tbody, tr, td {
                border: none !important;
            }

        .blankSpace-20 {
            margin-top: 20px;
            height: 20px;
            width: 100%;
        }

        .masterHead {
            padding: 3px;
            margin-top: 10px;
            margin-bottom: 10px;
            width: 100%;
        }

            .masterHead b {
                border-bottom: 1px solid;
                background-color: #23c58f;
                color: #fff;
            }

        .segment {
            width: 100%;
            min-height: 350px;
        }

        .chartDiv {
            width: 100%;
            height: 280px;
            min-height: 280px;
            max-height: 280px;
            border: 1px solid black;
            position: relative;
        }

        .chartColorInfo {
            float: left;
            position: absolute;
            top: 10px;
            right: 10px;
            border: 1px dashed black;
            padding: 5px 5px;
            font-size: 14px;
        }

        .category {
            height: 15px;
            width: 15px;
            float: left;
        }

        .direction {
            height: 20px;
            width: 250px;
            float: left;
            color: white;
            background-color: #344767
        }

        .categoryBar {
            float: left;
            position: absolute;
            bottom: 0;
            border: 1px solid black;
            width: 40px;
        }

        .vertical {
            transform: rotate(180deg);
            writing-mode: vertical-lr;
            text-align: center;
        }

        .tableizer-table {
            font-family: sans-serif;
            border: 1px solid black !important;
            width: 100%;
        }

            .tableizer-table th {
                background-color: lightgray;
                color: black;
                font-weight: bold;
                font-size: 14px;
                padding: 6px;
                border: 1px solid black !important;
            }

            .tableizer-table td {
                font-size: 12px;
                padding: 4px;
                border: 1px solid black !important;
                color: black;
            }

            .tableizer-table tr:last-child {
                background-color: lightgray;
                color: black;
                font-weight: bold;
                font-size: 12px;
                padding: 6px;
            }

        .text-right {
            text-align: right;
        }

        .mt-20 {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="image-header">
            <img src="~/Content/logo-sm.png" height="70" width="70" />
        </div>
        <div style="border:1px solid"></div>
        <div class="report-header">
            <h3><b>VIDS Summary Report</b></h3>
        </div>
        <div style="border:1px solid"></div>

        <table class="data-fliter">
            <tbody>
                <tr>
                    <td style="width:20%">From Date Time</td>
                    <td style="width:25%">: @FilterData.StartDateTime</td>
                    <td style="width:20%">To Date Time</td>
                    <td style="width:25%">: @FilterData.EndDateTime</td>

                </tr>
                <tr>
                    <td style="width:20%">Control Room</td>
                    <td style="width:25%">: @FilterData.ControlRoomFilterList</td>
                    <td style="width:20%">Package</td>
                    <td style="width:25%" colspan="1">: <span class="wordwrapper"> @FilterData.PackageFilterList </span></td>
                </tr>
                <tr>
                    <td style="width:20%">Chainage</td>
                    <td style="width:25%" colspan="1">: <span class="wordwrapper"> @FilterData.ChainageFilterList </span></td>
                    <td style="width:20%">Position</td>
                    <td style="width:25%">: @FilterData.PositionFilterList</td>
                </tr>
                <tr>
                    <td style="width:20%">Event Type</td>
                    <td style="width:25%" colspan="1">: <span class="wordwrapper"> @FilterData.EventFilterList </span></td>
                    <td style="width:20%">Direction</td>
                    <td style="width:25%">: @FilterData.DirectionFilterList</td>
                </tr>
            </tbody>
        </table>
        <div style="border:1px solid"></div>

        <div class="masterHead"><h4><b>VIDS Event Count By Category</b></h4></div>
        <div class="segment">
            <div class="chartDiv">
                <div class="chartColorInfo">
                    @foreach (DataRow row in Model.Tables[0].Rows)
                    {
                        if (row[1].ToString() != "Total")
                        {
                            CatName = @row[1].ToString(); CatCount = Convert.ToInt64(row[2].ToString()); CatPercentage = (row[3]).ToString() + "%"; CatColor = row[4].ToString();
                            <div class="category" style="background-color: @CatColor;"></div>
                            <span class="vertical">&nbsp;@CatName - @CatPercentage</span>
                            <br />
                        }
                    }
                </div>
                @foreach (DataRow row in Model.Tables[0].Rows)
                {
                    if (row[1].ToString() != "Total")
                    {
                        CatName = @row[1].ToString(); CatCount = Convert.ToInt64(row[2].ToString()); CatPercentage = (row[3]).ToString() + "%"; CatColor = row[4].ToString();
                        var CatPercentage2 = CatPercentage + 1;
                        <div class="categoryBar" style="background-color: @CatColor; height: @CatPercentage;  left: @LeftMargin;">@CatCount </div>
                        LeftMargin = LeftMargin.Replace("%", ""); LastLeftMargin = (Convert.ToInt64(LeftMargin) + 8); LeftMargin = ((LastLeftMargin)) + "%";
                    }
                }
            </div>
            <table class="tableizer-table mt-20">
                <thead>
                    <tr class="tableizer-firstrow">
                        <th>Sr. No.</th>
                        <th>Event Type</th>
                        <th>Event Counts</th>
                        <th>Percentage (%)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow row in Model.Tables[0].Rows)
                    {
                        index = index + 1;
                        <tr>
                            <td>@index </td>
                            <td>@row[1]</td>
                            <td class="text-right">@row[2]</td>
                            <td class="text-right">@row[3]%</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="masterHead"><h4><b>VIDS Event Count By Position</b></h4></div>
        <div class="segment">
            <div class="chartDiv">
                <div class="chartColorInfo">
                    @if (LastLeftMargin != 0)
                    {
                        LastLeftMargin = 0;
                        LeftMargin = "2%";
                    }
                    @foreach (DataRow row in Model.Tables[1].Rows)
                    {
                        if (row[1].ToString() != "Total")
                        {
                            CatName = @row[1].ToString(); CatCount = Convert.ToInt64(row[2].ToString()); CatPercentage = (row[3]).ToString() + "%"; CatColor = row[4].ToString();
                            <div class="category" style="background-color: @CatColor;"></div>
                            <span class="vertical">&nbsp;@CatName - @CatPercentage</span>
                            <br />
                        }
                    }
                </div>
                @foreach (DataRow row in Model.Tables[1].Rows)
                {
                    if (row[1].ToString() != "Total")
                    {
                        CatName = @row[1].ToString(); CatCount = Convert.ToInt64(row[2].ToString()); CatPercentage = (row[3]).ToString() + "%"; CatColor = row[4].ToString();
                        var CatPercentage2 = CatPercentage + 1;
                        <div class="categoryBar" style="background-color: @CatColor; height: @CatPercentage;  left: @LeftMargin;">@CatCount </div>
                        LeftMargin = LeftMargin.Replace("%", ""); LastLeftMargin = (Convert.ToInt64(LeftMargin) + 8); LeftMargin = ((LastLeftMargin)) + "%";
                    }
                }
            </div>
            <table class="tableizer-table mt-20">
                <thead>
                    <tr class="tableizer-firstrow">
                        <th>Sr. No.</th>
                        <th>Position</th>
                        <th>Event Counts</th>
                        <th>Percentage (%)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow row in Model.Tables[1].Rows)
                    {
                        index = index + 1;
                        <tr>
                            <td>@index </td>
                            <td>@row[1]</td>
                            <td class="text-right">@row[2]</td>
                            <td class="text-right">@row[3]%</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <br />
        <div class="masterHead"><h4><b>VIDS Event Count By Location</b></h4></div>
        <div class="segment">
            <div class="chartDiv">
                <div class="chartColorInfo">
                    @if (LastLeftMargin != 0)
                    {
                        LastLeftMargin = 0;
                        LeftMargin = "2%";
                    }
                    @foreach (DataRow row in Model.Tables[2].Rows)
                    {
                        if (row[0].ToString() != "Total")
                        {
                            CatName = @row[0].ToString(); CatCount = Convert.ToInt64(row[1].ToString()); CatPercentage = (row[2]).ToString() + "%"; CatColor = row[3].ToString();
                            <div class="category" style="background-color: @CatColor;"></div>
                            <span class="vertical">&nbsp;@CatName - @CatPercentage</span>
                            <br />
                        }
                    }
                </div>
                @foreach (DataRow row in Model.Tables[2].Rows)
                {
                    if (row[0].ToString() != "Total")
                    {
                        CatName = @row[0].ToString(); CatCount = Convert.ToInt64(row[1].ToString()); CatPercentage = (row[2]).ToString() + "%"; CatColor = row[3].ToString();
                        var CatPercentage2 = CatPercentage + 1;
                        <div class="categoryBar" style="background-color: @CatColor; height: @CatPercentage;  left: @LeftMargin;">@CatCount </div>
                        LeftMargin = LeftMargin.Replace("%", ""); LastLeftMargin = (Convert.ToInt64(LeftMargin) + 8); LeftMargin = ((LastLeftMargin)) + "%";
                    }
                }
            </div>
            <table class="tableizer-table mt-20">
                <thead>
                    <tr class="tableizer-firstrow">
                        <th>Sr. No.</th>
                        <th>Position</th>
                        <th>Event Counts</th>
                        <th>Percentage (%)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow row in Model.Tables[2].Rows)
                    {
                        index = index + 1;
                        <tr>
                            <td>@index </td>
                            <td>@row[0]</td>
                            <td class="text-right">@row[1]</td>
                            <td class="text-right">@row[2] %</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>

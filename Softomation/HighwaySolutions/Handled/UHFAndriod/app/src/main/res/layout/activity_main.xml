<!--			android:button="@null"-->
<!--			android:gravity="center"-->
<!--			android:text="@string/config"-->
<!--			android:textColor="#ffffff" />-->


	</LinearLayout>
    
     <FrameLayout
            android:id="@+id/frl_content"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1" />
     
</LinearLayout>

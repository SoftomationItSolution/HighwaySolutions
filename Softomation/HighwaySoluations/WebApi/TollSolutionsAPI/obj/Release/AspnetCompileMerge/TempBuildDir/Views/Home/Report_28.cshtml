@{
    int index = 0;
    string JourneyTypeName = "";
    string Overweight = "";
    string Status = "";

    decimal total = 0;
    DateTime tDt;
    Layout = null;
    Softomation.DMS.Libraries.CommonLibrary.InterfaceLayer.PlazaManagementIL PlazaData = ViewBag.PlazaData;
    Softomation.DMS.Libraries.CommonLibrary.InterfaceLayer.DataFilterIL FilterData = ViewBag.Filter;
}
@using System.Data
@model DataTable

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.ReportName Report</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" media='screen,print' />
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <style type="text/css">
        .blankSpace {
            width: 100%;
            height: 5px;
        }

        thead {
            display: table-header-group;
        }

        tfoot {
            display: table-row-group;
        }

        tr {
            page-break-inside: avoid;
        }

        @@media print {
            .noprint {
                display: none !important;
            }
        }
    </style>
    <style type="text/css">
        table.tableizer-table {
            font-size: 10px;
            border: 1px solid #CCC;
            font-family: Arial, Helvetica, sans-serif;
        }

        .tableizer-table td {
            padding: 4px;
            margin: 3px;
            border: 1px solid #CCC;
        }

        .tableizer-table th {
            /*background-color: #104E8B;*/
            background-color: #72777a;
            color: #FFF;
            font-weight: bold;
        }

        .container {
            padding-right: 10px;
            padding-left: 10px;
            margin-right: 0px;
            margin-left: 0px;
            max-width: 100% !important;
        }

        table, th, td {
            font-size: 10px !important;
        }

        table {
            page-break-inside: auto
        }

        tr {
            page-break-inside: avoid;
            page-break-after: auto
        }

        thead {
            display: table-header-group
        }

        tfoot {
            display: table-footer-group
        }
        
    </style>
</head>
<body>
    <div class="container">
        <table class="tbldata2" style="width:100% ">
            <tr>
                <th style="margin-left:2px;width:25%"><img src="~/Content/NHAIlogo.jpg" height="70" /></th>
                <th style="width: 30%"><h3 style="color: black;">@PlazaData.PlazaName</h3></th>
                <th></th>
            </tr>
        </table>
        <div style="border:1px solid"></div>
        <table class="tbldata2" style="width:100% ">
            <tr>
                <th style="width:20%"></th>
                <th style="width: 40%"><h3 style="color: black;"><b>@ViewBag.ReportName Report</b></h3></th>
                <th></th>
            </tr>

        </table>
        <div style="border:1px solid"></div>
        <table class="tbldata2" style="width: 100%;margin-top: 5px;margin-bottom: 5px;">
            <tbody>
                <tr>
                    <td style="width:10%">From Date Time</td>
                    <td style="width:40%">: @FilterData.StartDateTime.ToString("dd-MMM-yyyy HH:mm:ss")</td>
                    <td style="width:10%">To Date Time</td>
                    <td style="width:40%">: @FilterData.EndDateTime.ToString("dd-MMM-yyyy HH:mm:ss")</td>
                </tr>
                <tr>
                    <td style="width:10%">Shift</td>
                    <td style="width:40%">: @FilterData.Shift</td>
                    <td style="width:10%">VehicleClass</td>
                    <td style="width:40%">: @FilterData.VehicleClass</td>
                </tr>
                <tr>
                    <td style="width:10%">Lane</td>
                    <td style="width:40%">: @FilterData.Lane</td>
                    <td style="width:10%">Operator</td>
                    <td style="width:40%">: @FilterData.LaneUser</td>
                </tr>
                <tr>
                    <td style="width:10%">Transactions Type</td>
                    <td style="width:40%">: @FilterData.TranType</td>
                    <td style="width:10%">Exempt Type</td>
                    <td style="width:40%">: @FilterData.ExemptType</td>
                </tr>
                <tr>
                    <td style="width:10%">Payment Type</td>
                    <td style="width:40%">: @FilterData.PaymentType</td>
                    <td style="width:10%">Generated By</td>
                    <td style="width:40%">: @ViewBag.GenratedBy</td>
                </tr>
            </tbody>
        </table>
        <div style="border:1px solid"></div>
        <div class="blankSpace"></div>
        <table class="tableizer-table" style="width:100%">
            <thead>
                <tr class="tableizer-firstrow">
                    <th>Tran Id</th>
                    <th>Tran DateTime</th>
                    <th>Lane</th>
                    <th>Shift</th>
                    <th>Operator</th>
                    <th>Operator Class</th>
                    <th>AVC Class</th>
                    <th>VRN</th>
                    <th>Journey Name</th>
                    <th>Journey Type</th>
                    <th>Overweight</th>
                    <th>Referance Number</th>
                    <th>Tran Type</th>
                    <th>Exempt Type</th>
                    <th>Payment Type</th>
                    <th>Cancel</th>
                    <th>Amount(&#8377;)</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Rows.Count > 0)
                {
                    foreach (DataRow row in Model.Rows)
                    {
                        index = index + 1;
                        tDt = Convert.ToDateTime(row["TransactionTimeStamp"]);
                        JourneyTypeName = "Single";
                        Overweight = "No";
                        Status = "No";
                        if (Convert.ToInt32(row["JourneyType"]) == 2)
                        {
                            JourneyTypeName = "Return";
                        }
                        if (Convert.ToInt32(row["Overweight"]) == 1)
                        {
                            Overweight = "Yes";
                        }
                        if (Convert.ToInt32(row["TransactionStatus"]) != 1)
                        {
                            Status = "Yes";
                        }
                        <tr>
                            @*<td>@index</td>*@
                            <td>@row["EntryId"]</td>
                            <td>@tDt.ToString("dd-MMM-yyyy HH:mm:ss")</td>
                            <td>@row["LaneNumber"]</td>
                            <td>@row["ShiftId"]</td>
                            <td>@row["LoginId"]</td>
                            <td>@row["ClassName"]</td>
                            <td>@row["AVCClassName"]</td>
                            <td>@row["PlateNumber"]</td>
                            <td>@row["Journey"]</td>
                            <td>@JourneyTypeName</td>
                            <td>@Overweight</td>
                            <td>@row["ReferenceNumber"]</td>
                            <td>@row["TransactionTypeName"]</td>
                            <td>@row["ExemptType"]</td>
                            <td>@row["PaymentType"]</td>
                            <td>@Status</td>
                            <td>&#8377; @row["TransactionAmount"]</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</body>
</html>

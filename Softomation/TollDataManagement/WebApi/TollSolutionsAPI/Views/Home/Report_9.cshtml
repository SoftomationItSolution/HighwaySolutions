@{
    int index = 0;
    string JourneyTypeName = "";
    string Overweight = "";
    string Status = "";

    decimal total = 0;
    decimal detRowtotal = 0;
    DateTime tDt;
    Layout = null;
    Softomation.DMS.Libraries.CommonLibrary.InterfaceLayer.PlazaManagementIL PlazaData = ViewBag.PlazaData;
    Softomation.DMS.Libraries.CommonLibrary.InterfaceLayer.DataFilterIL FilterData = ViewBag.Filter;
}
@using System.Data
@model DataSet
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.ReportName Report</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" media='screen,print' />
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <style type="text/css">
        .blankSpace {
            width: 100%;
            height: 5px;
        }

        thead {
            display: table-header-group;
        }

        tfoot {
            display: table-row-group;
        }

        tr {
            page-break-inside: avoid;
        }

        @@media print {
            .noprint {
                display: none !important;
            }
        }
    </style>
    <style type="text/css">
        table.tableizer-table {
            font-size: 10px;
            border: 1px solid #CCC;
            font-family: Arial, Helvetica, sans-serif;
        }

        .tableizer-table td {
            padding: 4px;
            margin: 3px;
            border: 1px solid #CCC;
        }

        .tableizer-table th {
            /*background-color: #104E8B;*/
            background-color: #72777a;
            color: #FFF;
            font-weight: bold;
        }

        .container {
            padding-right: 10px;
            padding-left: 10px;
            margin-right: 0px;
            margin-left: 0px;
            max-width: 100% !important;
        }

        table, th, td {
            font-size: 10px !important;
        }

        table {
            page-break-inside: auto
        }

        tr {
            page-break-inside: avoid;
            page-break-after: auto
        }

        thead {
            display: table-header-group
        }

        tfoot {
            display: table-footer-group
        }

        .tableizer-table tr:last-child {
            font-weight: bold;
        }

        .float-container {
            border-bottom: 1px solid #A9A9A9 !important;
            padding: 5px;
            height: 100%
        }

        .float-child {
            width: 50%;
            float: left;
            padding: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <table class="tbldata2" style="width:100%;">
            <tr>
                <th style="margin-left:2px;width:25%"><img src="~/Content/NHAIlogo.jpg" height="70" /></th>
                <th style="width: 30%"><h3 style="color: black;">@PlazaData.PlazaName</h3></th>
                <th></th>
            </tr>
        </table>
        <div style="border:1px solid"></div>
        <table class="tbldata2" style="width:100% ">
            <tr>
                <th style="width:30%"></th>
                <th style="width: 50%"><h3 style="color: black;"><b>@ViewBag.ReportName Report</b></h3></th>
                <th></th>
            </tr>

        </table>
        <div style="border:1px solid"></div>

        <table class="tbldata2" style="width: 100%;margin-top: 5px;margin-bottom: 5px;">
            <tbody>
                <tr>
                    <td style="width:10%">From Date Time</td>
                    <td style="width:40%">: @FilterData.StartDateTime.ToString("dd-MMM-yyyy HH:mm:ss")</td>
                    <td style="width:10%">To Date Time</td>
                    <td style="width:40%">: @FilterData.EndDateTime.ToString("dd-MMM-yyyy HH:mm:ss")</td>
                </tr>
                <tr>
                    <td style="width:10%">Shift</td>
                    <td style="width:40%">: @FilterData.Shift</td>
                    <td style="width:10%">Operator</td>
                    <td style="width:40%">: @FilterData.LaneUser</td>
                </tr>
                <tr>
                    <td style="width:10%">Generated By</td>
                    <td style="width:40%">: @ViewBag.GenratedBy</td>
                    <td style="width:10%"></td>
                    <td style="width:40%"></td>
                </tr>
            </tbody>
        </table>
        <div style="border:1px solid"></div>
        <div class="blankSpace"></div>
        <h4>Cashup Details:</h4>
        <hr style="border-width: 1px;border-style: dashed;">
        <table class="tableizer-table" style="width:100%">
            <tbody>
                <tr>
                    <td style="width:20%">Cash Allotment</td>
                    <td style="width:80%">: @ViewBag.AmountAlloted</td>
                </tr>
                <tr>
                    <td style="width:20%">Declared Amount</td>
                    <td style="width:80%">: @ViewBag.DepositedAmount</td>
                </tr>
                <tr>
                    <td style="width:20%">Transcation Amount</td>
                    <td style="width:80%">: @ViewBag.AmountCollection</td>
                </tr>
                <tr>
                    <td style="width:20%">Shortage/Excess</td>
                    <td style="width:80%">: @ViewBag.PendingAmount</td>
                </tr>
            </tbody>
        </table>
        @if (Model.Tables[1].Rows.Count > 0)
        {
            foreach (DataRow row in Model.Tables[1].Rows)
            {
                DataTable tblAllotment = Model.Tables[2].AsEnumerable().Where(Myrow => Myrow.Field<String>("TCLoginId") == row["TCLoginId"].ToString()).CopyToDataTable();
                DataTable tblDetails = Model.Tables[3].AsEnumerable().Where(Myrow => Myrow.Field<String>("TCLoginId") == row["TCLoginId"].ToString()).CopyToDataTable();
                <h4>Operator: @row["TCLoginId"]</h4>
                <hr style="border-width: 1px;border-style: dashed;">
                <div class="float-container">
                    <div class="float-child">
                        <div class="green">
                            <h4>Cash Allotment</h4>
                            <table class="tableizer-table" style="width:100%">
                                <thead>
                                    <tr class="tableizer-firstrow">
                                        <th>Cash Details</th>
                                        <th>Count</th>
                                        <th>Amount(&#8377;)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (DataRow AlloRow in tblAllotment.Rows)
                                    {
                                        total = total + Convert.ToDecimal(AlloRow["Total"]);
                                        <tr>
                                            <td>&#8377; @AlloRow["BaseValue"]</td>
                                            <td>@AlloRow["MoneyCount"]</td>
                                            <td>@AlloRow["Total"]</td>
                                        </tr>
                                    }
                                    <tr>
                                        <td>Total</td>
                                        <td colspan="100%" style="text-align:right">&#8377;@total</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="float-child">
                        <div class="blue">
                            <h4>Cash Deposit</h4>
                            <table class="tableizer-table" style="width:100%">
                                <thead>
                                    <tr class="tableizer-firstrow">
                                        <th>Cash Details</th>
                                        <th>Count</th>
                                        <th>Amount(&#8377;)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (DataRow detRow in tblDetails.Rows)
                                    {
                                        detRowtotal = detRowtotal + Convert.ToDecimal(detRow["Total"]);
                                        <tr>
                                            <td>&#8377; @detRow["BaseValue"]</td>
                                            <td>@detRow["MoneyCount"]</td>
                                            <td>@detRow["Total"]</td>
                                        </tr>
                                    }
                                    <tr>
                                        <td>Total</td>
                                        <td colspan="100%" style="text-align:right">&#8377;@detRowtotal</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            }
        }
    </div>
</body>
</html>
